#!/bin/sh
#
# $NetBSD: cgd,v 1.8 2010/11/01 14:41:11 christos Exp $
#

# PROVIDE: cgd
# REQUIRE: rndctl
# BEFORE:  DISKS
# KEYWORD: interactive

$_rc_subr_loaded . /etc/rc.subr

name="cgd"
rcvar=$name
start_cmd="cgd_start"
stop_cmd=":"

cgd_start()
{
	if [ -f /etc/cgd/cgd.conf ]; then
		print_rc_normal "Configuring CGD devices."
		cgdconfig -C
	fi
}

cgd_stop()
{
	if [ -f /etc/cgd/cgd.conf ]; then
		print_rc_normal "Unconfiguring CGD devices."
		cgdconfig -U
	fi
}

load_rc_config $name
run_rc_command "$1"
